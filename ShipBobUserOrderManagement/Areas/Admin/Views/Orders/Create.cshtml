                                            <input asp-for="UserId" type="text" id="firstName" class="form-control">
                                        </div>
                                    </div>

                                </div>
                            -->

                                <!--/row-->
                                <!--/row-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Tracking Id</label>
                                            <input asp-for="Order.TrackingID" type="text" id="lastName" class="form-control">
                                        </div>
                                    </div>
                                </div>



                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Street Address</label>
                                            <input asp-for="Order.StreetAddress" type="text" id="lastName" class="form-control">
                                        </div>
                                    </div>
                                </div>




                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">City</label>
                                            <input asp-for="Order.City" type="text" id="lastName" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">State</label>
                                            <input asp-for="Order.State" type="text" id="lastName" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">ZipCode</label>
                                            <input asp-for="Order.ZipCode" type="text" id="lastName" class="form-control">
                                        </div>
                                    </div>
                                </div>

                                <!--/span-->
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <!--/row-->
                            <hr>

                        
                        <div class="form-actions m-t-30">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Place Order</button>
                            <button type="button" class="btn btn-default">Cancel</button>
                        </div>

                    </form>
